<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cs.tufts.irisoliver.favorapp.User_profile">

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="282dp"

        android:layout_above="@+id/gridView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />

    <ImageView
        android:id="@+id/profpic"
        android:layout_width="124dp"
        android:layout_height="84dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="16dp"

        android:layout_below="@+id/toolbar"
        android:layout_alignStart="@+id/gridView"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="369dp"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="358dp" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout2">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/appBarLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ratingBar"
        android:layout_alignTop="@+id/profpic"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="31dp"
        android:text="FLAVOR FLAV" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="flavor@flav.com" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="678 999 8212" />

</RelativeLayout>
